{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@/entities/*": ["src/entities/*"],
      "@/seed/*": ["db_handler/seed/*"],
      // "*": [ "node_modules/*", "src/*" ],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./*.ts"
  ],
  "exclude": [
    "./node_modules"
  ],
}
